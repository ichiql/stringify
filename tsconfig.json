{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strict": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "target": "ESNext",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "jest.config.ts"
  ]
}
